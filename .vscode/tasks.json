// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"owner": "typescript",
				"pattern": {
					"regexp": "^([^\\s].*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\s*Rebuilding...$",
					"endsPattern": "^\\s*(Built in|Failed to build in|Built with \\d+ warning) .*$"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": "build"
		}
	]
}
